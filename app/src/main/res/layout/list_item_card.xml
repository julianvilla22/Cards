<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="card"
            type="es.uam.eps.dadm.cards.Card" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:id="@+id/card_item">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/list_item_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/design_default_color_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                android:text="@{card.question}"
                tools:text="Pregunta"/>

            <TextView
                android:id="@+id/list_item_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_question"
                android:textColor="@color/design_default_color_primary"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:text="@{card.answer}"
                tools:text="Respuesta"/>
            <TextView
                android:id="@+id/list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/card_date_format(card.shortDate)}"
                tools:text="Creada: 00/00/0000"
                android:layout_toLeftOf="@id/info_card_button"/>
            <ImageButton
                android:id="@+id/info_card_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_card"
                android:layout_toLeftOf="@id/delete_card_button"
                />
            <ImageButton
                android:id="@+id/delete_card_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_delete_outline_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/optional_info_layout"
                android:layout_below="@id/list_item_answer"
                android:visibility="gone">
                <TextView
                    android:id="@+id/list_item_next_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list_item_easiness"
                    android:layout_alignParentLeft="true"
                    android:text="@{@string/card_next_date_format(card.shortNextDate)}"
                    tools:text="Proxima vez: 00/00/0000"/>
                <TextView
                    android:id="@+id/list_item_easiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@{@string/card_list_easiness_format(card.easiness)}"
                    tools:text="Easiness=0.02"/>
                <TextView
                    android:id="@+id/list_item_repetitions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/list_item_easiness"
                    android:paddingStart="5dp"
                    android:text="@{@string/card_list_repetitions_format(card.repetitions)}"
                    tools:text="Repetitions=0"/>
                <TextView
                    android:id="@+id/list_item_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/list_item_repetitions"
                    android:paddingStart="5dp"
                    android:text="@{@string/card_list_interval_format(card.interval)}"
                    tools:text="Interval=0"/>
            </RelativeLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>